---

body:
  - NumberAdjuster:
      data:
        name: 'temperature'
  - NumberAdjuster:
      data:
        name: 'pressure'

recipes:
  NumberAdjuster:
    data:
      value: 0
      name: ''
    functions:
      inc: c => c.set( 'value', 1 + c.get('value') )
      dec: c => c.get( 'value' ) > 0 && c.set( 'value', c.get('value') - 1 )
    contents:
      - div:
          - h1: c => c.id
          - button:
              textContent: '-'
              on_click: c => c.fun.dec()
          - span:
              style: margin: 0 5px
              textContent: c => c.get('name') + ': ' + c.get('value')
          - button:
              textContent: '+'
              on_click: c => c.fun.inc()
